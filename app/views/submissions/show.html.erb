<% unless @user.nil? %>
	<h1 class="text-center">
			<a href="<%= test_submissions_path(@submission.test) %>" class="btn btn-default" style="margin-bottom: 5px; margin-right: 30px;">
				<i class="fa fa-arrow-left" style="padding-right: 5px;"></i> Volver</a> 
		Entrega de: <%= @submission.applicant.name %>
	</h1>
<% end %>

<br><br>

<h3>Preguntas:</h3>
<hr>

<% @submission.test.questions.each do |question| %>
	
	<div class="row">
		
		<div class="col-md-8">
			
			<h4><strong><%= question.title %></strong></h4>
			
			<p><%= question.description %></p>
			
			<br>
			
			<div class="col-md-4 col-md-offset-2 text-center">
				
				<i class="fa fa-file-text-o" style="font-size: 10em"></i>

				<br><br>
				<a href="/attachments/<%= question.attachment %>" target="_blank" class="btn btn-success"><i class="fa fa-download"></i> Descargar</a>

			</div>
			
			<div class="col-md-4 text-center" style="margin-top: 50px;">
				
				<% answer = @submission.get_answer_for_question question %>
				<% if answer.nil? or (answer.nil? and not answer.expired?)  %>

				 	<input type="file" />

				<% else %>
					
					<p style="color: red"><strong>Ya subio la respuesta el 17/02/2015</strong></p>
				
				<% end %>

			</div>

		</div>

	</div>
	
	<% unless question == @submission.test.questions.last %>
		<hr>
	<% end %>


<% end %>