<% unless @user.nil? %>
	<h1 class="text-center">
			<a href="<%= test_submissions_path(@submission.test) %>" class="btn btn-default" style="margin-bottom: 5px; margin-right: 30px;">
				<i class="fa fa-arrow-left" style="padding-right: 5px;"></i> Volver</a> 
		Entrega de: <%= @submission.applicant.name %>
	</h1>
<% end %>

<br><br>

<h3>Preguntas:</h3>
<hr>

<% @submission.test.questions.each do |question| %>
	
	<div class="row">
		
		<div class="col-md-8">
			
			<h4><%= question.title %></h4>
			
			<p><%= question.description %></p>
			
			
			<div class="col-md-4 col-md-offset-2">
				
				<i class="fa fa-file-text-o fa-6"></i>

				<br>
				<a href="/attachments/<%= question.attachment %>" class="btn btn-success"><i class="fa fa-download"></i> Descargar</a>

			</div>
			
			<div class="col-md-4">
			
				<p>AcÃ¡ se sube la respuesta</p>

			</div>

		</div>

	</div>
	
	<% unless question == @submission.test.questions.last %>
		<hr>
	<% end %>


<% end %>