<%= form_tag("/login", method: "post") do %>
	<div class="container" style="margin-top:30px">
		<div class="col-md-4 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-heading"><h3 class="panel-title"><strong>Iniciar Sesion</strong></h3></div>
				<div class="panel-body">
					<form role="form">
						<div class="form-group">
							<label for="email">Email</label>
							<input type="email" class="form-control" style="border-radius:0px" name="user[:email]" id="email" placeholder="Ingrese su email">
						</div>
						<div class="form-group">
							<label for="password">Contraseña</label>
							<input type="password" class="form-control" name="user[:password]" style="border-radius:0px" id="password" placeholder="Contraseña">
						</div>
						<br>
						<p class="text-center">
							<button type="submit" class="btn btn-sm btn-default">Iniciar Sesion</button>
						</p>
					</form>
				</div>
			</div>
		</div>
	</div>
<% end %>