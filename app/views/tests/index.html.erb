<h1 class="text-center">Listado de Tests</h1>

<br>
<%= link_to "Nuevo test", new_test_path, class: 'btn btn-success' %>
<br><br><br>

<table class="table table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Fecha creación</th>
			<th>Cantidad registrados</th>
			<th>Cantidad de entregas</th>
			<th>Descripción</th>
			<th class="text-center">Acción</th>
		</tr>
	</thead>
	<tbody>
		<% @tests.each do |test| %>
			<tr>
				<td><%= test.id %></td>
				<td><%= test.created_at %></td>
				<td></td>
				<td></td>
				<td><%= test.description %></td>
				<td class="text-center">
					<%= link_to "Ver entregas", [test, :submissions], class: 'btn btn-primary' %>
					<%= link_to "Editar", edit_test_path(test),       class: 'btn btn-default' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>